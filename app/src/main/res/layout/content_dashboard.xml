<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.taitran.buzzmovie.controller.Dashboard"
    tools:showIn="@layout/activity_dashboard">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/searchBar"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:text="Logout"
        android:onClick="logoutButtonPressed"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:text="Edit Profile"
        android:onClick="editProfileButtonPressed"
        android:id="@+id/editProfileBtn"
        android:layout_below="@+id/logoutBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/welcomeText"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:longClickable="true"
        android:onClick="searchButtonPressed" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:queryHint="Search"
        android:onClick="searchButtonPressed"
        android:longClickable="false" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/searchBar"
        android:layout_alignEnd="@+id/searchBar"
        android:visibility="gone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/okbutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:singleLine="false"
        android:visibility="gone"
        android:onClick="okButtonPressed"
        android:nestedScrollingEnabled="true" />

</RelativeLayout>
