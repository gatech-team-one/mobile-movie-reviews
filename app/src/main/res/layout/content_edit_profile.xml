<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#292929">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textColor="#ffffff"
        android:textSize="40sp"

        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:id="@+id/title" />
    <RelativeLayout
        android:id="@+id/usernameLayout"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username: "
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:id="@+id/usernameLabel"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="70pt"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:id="@+id/displayUsernameText"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/usernameLabel" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emailLayout"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/usernameLayout"
        android:layout_alignStart="@+id/usernameLayout">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:id="@+id/emailLabel"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="jjkk"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:layout_toRightOf="@+id/emailLabel"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:id="@+id/displayEmailText" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="jjkk"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:layout_toRightOf="@+id/emailLabel"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dp"
                android:visibility="invisible"
                android:id="@+id/editEmailText"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:id="@+id/editEmailBtn"
                android:onClick="editEmailButtonPressed"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/displayEmailText"
                android:layout_marginLeft="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/passLayout"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@id/emailLayout"
        android:layout_alignStart="@+id/emailLayout">
            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:text="Password: \u25CF \u25CF \u25CF \u25CF \u25CF \u25CF"
                android:id="@+id/displayPass"
                android:layout_centerVertical="true"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/editPassBtn"
                android:onClick="editPassButtonPressed"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/displayPass"
                android:layout_marginLeft="5dp"
                />
    </RelativeLayout>


</RelativeLayout>