<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchBar"
        android:hint="Search for Movies"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingStart="20dp"
        android:background="@null"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_toStartOf="@+id/goBtn" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/clrBtn"
        android:src="@drawable/ic_clear"
        android:background="@null"
        android:onClick="clearButtonPressed"
        android:layout_alignTop="@+id/goBtn"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/goBtn"
        android:src="@drawable/ic_go_search"
        android:background="@null"
        android:onClick="goButtonPressed"
        android:layout_alignBottom="@+id/searchBar"
        android:layout_toStartOf="@+id/clrBtn" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:visibility="gone"
        android:layout_below="@+id/searchBar" />
</RelativeLayout>
